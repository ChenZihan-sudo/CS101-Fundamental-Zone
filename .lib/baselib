#ifndef CATCOLIA_BASELIB
#define CATCOLIA_BASELIB

#include <cstdio>
#include <malloc/_malloc.h>

namespace baselib {

#define DATALEN(data, data_type) (sizeof(data) / sizeof(data_type))

  template <typename T>
  void swap(T* v1, T* v2)
  {
    T buf = *v1;
    *v1 = *v2;
    *v2 = buf;
  }

  template <typename T>
  int comp(T v1, T v2)
  {    
    if (v1 < v2) return -1;
    if (v1 == v2) return 0;
    if (v1 > v2) return 1;
  }

} // namespace baselib

#endif
